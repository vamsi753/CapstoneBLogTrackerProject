@{
    ViewData["Title"] = "Home";
}

<h2>Blog Tracker - All Blogs</h2>

<div class="row">
    @for (int i = 1; i <= 6; i++)
    {
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" src="https://via.placeholder.com/300" alt="Blog Image">
                <div class="card-body">
                    <h5 class="card-title">Blog Title @i</h5>
                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted">Posted on: @(DateTime.Now.AddDays(-i).ToShortDateString())</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
